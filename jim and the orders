// jim and the orders hacker rank soln.........
// a greedy approach :)..
#include<bits/stdc++.h>
using namespace std;


int main(){
int n,m;
cin>>n;
int a[n][2];
for(int i=0;i<n;i++){
	for(int j=0;j<2;j++)
		cin>>a[i][j];
}
// sort(a[n].begin(),a[n].end());
vector<pair<int,int>>sol;
for(int i=0;i<n;i++){
	int sum=0;
	for(int j=0;j<2;j++){
      sum+=a[i][j];
	}
	sol.push_back(make_pair(sum,i+1));
}

sort(sol.begin(),sol.end());
for(int i=0;i<n;i++)
cout<<sol[i].second<<" ";

return 0;
}
